    }
    
    .remember-forget{
      font-size: .9em;
      color:#F0EAD6;
      font-weight: 500;
      margin: -15px 0 15px;
      display:flex;
      justify-content: space-between;
    
    }
    
    .remember-forget label input{
      accent-color:#F0EAD6;
      margin-right: 3px;
    }
    
    .remember-forget a{
      color:#F0EAD6;
      text-decoration: none;
    }
    
    .remember-forget a:hover{
      text-decoration: underline;
    }
    
    .btn{
      width: 100%;
      height:45px;
      background: #F0EAD6;
      border: none;
      outline: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1em;
      color:#000000;
      font-weight: 500;
    }
    
    .login-register{
      font-size: .9em;
      color:#F0EAD6;
      text-align: left;
      font-weight: 500;
      margin: 25px 0 10px;
    }
    .login-register p{
      margin-left: 45px;
    }
    .login-register p a{
      color:#F0EAD6;
      text-decoration: none;
      font-weight: 600;
    }
    
    .login-register p a:hover{
      text-decoration: underline;
    }
    
  </style>
