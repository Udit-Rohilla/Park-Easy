    }
    .input-box label{
      position: absolute;
      top: 50%;
      left:5px;
      transform: translateY(-50%);
      font-size: 1rem;
      color:#F0EAD6;
      font-weight: 500;
      pointer-events: none;
      transition: .5s;
    }
    
    .input-box input:focus~label,
    .input-box input:valid~label{
      top:-5px;
    }
    .input-box input{
      width: 100%;
      height: 100%;
      background: transparent;
      border: none;
      outline: none;
      font-size: 1em;
      color:#F0EAD6;
      font-weight: 500;
