<%- include('./partials/header') %>
<%- include('./partials/adminnavbar') %>
<style>
    .card{
    -webkit-backdrop-filter: blur(10px); /* Safari */
    backdrop-filter: blur(5px);
    background-color: rgba(255, 255, 255, 0.5);
    margin-bottom: 10px; /* Reduced margin */
    }
</style>
<div class="row mt-5">

    <% for(let item of cities){ %>

        <div class="col-lg-4 product-card">
            <div class="card text-center shadow mt-3 mx-auto" style="width: 18rem;">
                <img src="<%=item.img%>" class="card-img-top img" alt="...">
                <div class="card-body">
                  <h3 class="card-title"> <%= item.name %> </h3>
                  <a href="/admin/cities/<%= item._id %>" class="btn btn-primary">View Info</a>
                </div>
            </div>
        </div>
        
    <% } %>
</div>


<%- include('./partials/footer') %>